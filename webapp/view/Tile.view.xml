<mvc:View
    controllerName="samplebasics.controller.Tile"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    height="100%"
    width="100%"
>
        <App
            id="app"
            height="100%"
        >
    <Page
        id="_IDGenPage1"
        showHeader="false"
        enableScrolling="false"
    >
        <HBox
            id="idHox1"
            items="{/Tile}"
        >
            <GenericTile
                id="idTile"
                header="{Header}"
                subheader="{Subheader}"
                class="
            sapUiLargeMarginTop 
            sapUiLargeMarginBottom 
            sapUiLargeMarginBegin 
            sapUiLargeMarginEnd
            solid"
                tileBadge="123"
                press="onTilePress"
            >
                <TileContent
                    id="_IDGenTileContent1"
                    unit="EUR"
                    footer="Current Quarter"
                >
                    <ImageContent
                        id="_IDGenImageContent1"
                        src="{Icon}"
                    />
                </TileContent>
            </GenericTile>
        </HBox>
    </Page>
    </App>
</mvc:View>
